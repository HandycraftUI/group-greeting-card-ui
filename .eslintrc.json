{
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.5.2"
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        },
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "eol-last": ["error", "always"],
        "semi": [2, "never"],
        "no-console": ["warn"],
        "indent": ["error", 4],
        "react/jsx-filename-extension": ["error"],
        "prefer-const": ["error"],
        "eqeqeq": ["error"],
        "quotes": ["error", "single", { "avoidEscape": true }]
    }
}
